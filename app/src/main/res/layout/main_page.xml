<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainPageActivity">

    <ImageView
        android:id="@+id/background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="2"
        android:scaleY="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/background" />

    <ImageView
        android:id="@+id/mainRectangle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.686"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/city"
        app:srcCompat="@drawable/mainrectangle" />

    <TextView
        android:id="@+id/city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/montserrat"
        android:text="Ваш город"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/today"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:fontFamily="@font/montserrat"
        android:text="Сейчас"
        android:textColor="@color/black"
        android:textSize="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mainRectangle" />

    <TextView
        android:id="@+id/temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="175dp"
        android:fontFamily="@font/montserrat"
        android:text=""
        android:textColor="@color/black"
        android:textSize="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/mainRectangle"
        app:layout_constraintTop_toBottomOf="@+id/today" />

    <TextView
        android:id="@+id/tempfeel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="75dp"
        android:text=""
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/mainRectangle"
        app:layout_constraintStart_toStartOf="@+id/mainRectangle"
        app:layout_constraintTop_toBottomOf="@+id/temp" />

    <TextView
        android:id="@+id/windMainInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:text=""
        android:fontFamily="@font/montserrat"
        android:textSize="20dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/tempfeel"
        app:layout_constraintStart_toStartOf="@+id/mainRectangle"
        app:layout_constraintTop_toBottomOf="@+id/temp" />

    <TextView
        android:id="@+id/speed"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="150dp"
        android:text=""
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/pressure"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="100dp"
        android:text=""
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/humidity"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="50dp"
        android:text=""
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tempAfter3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="200dp"
        android:layout_marginBottom="30dp"
        android:text=""
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/mainRectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/today" />

    <TextView
        android:id="@+id/tempAfter6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text=""
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/mainRectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/today" />

    <TextView
        android:id="@+id/tempAfter9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="200dp"
        android:layout_marginBottom="30dp"
        android:text=""
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/mainRectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/today" />

    <ImageView
        android:id="@+id/imageWeather"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="200dp"
        app:layout_constraintBottom_toBottomOf="@+id/mainRectangle"
        app:layout_constraintEnd_toEndOf="@+id/mainRectangle"
        app:layout_constraintStart_toEndOf="@+id/temp"
        app:layout_constraintTop_toTopOf="@+id/mainRectangle"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/timeAfter3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:gravity="center"
        android:text=""
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="@+id/tempAfter3"
        app:layout_constraintStart_toStartOf="@+id/tempAfter3"
        app:layout_constraintTop_toBottomOf="@+id/tempAfter3" />

    <TextView
        android:id="@+id/timeAfter6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:gravity="center"
        android:text=""
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="@+id/tempAfter6"
        app:layout_constraintStart_toStartOf="@+id/tempAfter6"
        app:layout_constraintTop_toBottomOf="@+id/tempAfter6" />

    <TextView
        android:id="@+id/timeAfter9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:gravity="center"
        android:text=""
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="@+id/tempAfter9"
        app:layout_constraintStart_toStartOf="@+id/tempAfter9"
        app:layout_constraintTop_toBottomOf="@+id/tempAfter9" />

    <ImageView
        android:id="@+id/imageAfter3"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintBottom_toTopOf="@+id/timeAfter3"
        app:layout_constraintEnd_toEndOf="@+id/tempAfter3"
        app:layout_constraintStart_toStartOf="@+id/tempAfter3"
        app:layout_constraintTop_toBottomOf="@+id/tempAfter3"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/imageAfter6"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintBottom_toTopOf="@+id/timeAfter6"
        app:layout_constraintEnd_toEndOf="@+id/tempAfter6"
        app:layout_constraintStart_toStartOf="@+id/tempAfter6"
        app:layout_constraintTop_toBottomOf="@+id/tempAfter6"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/imageAfter9"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintBottom_toTopOf="@+id/timeAfter9"
        app:layout_constraintEnd_toEndOf="@+id/tempAfter9"
        app:layout_constraintStart_toStartOf="@+id/tempAfter9"
        app:layout_constraintTop_toBottomOf="@+id/tempAfter9"
        tools:srcCompat="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>